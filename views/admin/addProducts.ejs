<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Add New Products</title>
    <link rel="icon" type="image/png" href="../../images/icons/favicon.png"/>
    <!-- Custom fonts for this template-->
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="../stylesheets/admin.css">
    <link rel="stylesheet" href="../stylesheets/admin.min.css">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="stylesheet" href="../stylesheets/special.css">

</head>

<body class="bg1">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center pt-5">
                            <h1 class="h3 font-weight-bold cl1">Add Products</h1>
                        </div>
                        <div class="p-5">
                            <form class="user" action="../admin/postAddProduct" method="post"
                                enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-7">
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Name</span></div>
                                            <input type="text" class="form-control form-control-user"
                                                id="productName exampleInputEmail" placeholder="Enter product name"
                                                name="productName">
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Price</span></div>
                                            <input type="number" class="form-control form-control-user"
                                                id="productName exampleInputEmail" placeholder="Enter product price"
                                                name="productPrice">
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Category</span></div>
                                            <select class="form-control" id="inputGroupSelect01" name="productCategory">
                                                <option selected>Choose Category</option>
                                                <% categories.forEach((category) => { %>
                                                    <option value="<%=category._id%>"><%= category.categoryName %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Batch</span></div>
                                            <select class="form-control" id="inputGroupSelect01" name="productBatch">
                                                <option selected>Choose Batch</option>
                                                <% batches.forEach((batch) => { %>
                                                    <option value="<%=batch._id%>"><%= batch.batchName %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-2 mb-sm-0">
                                                <div class="mb-2 ml-3 cl2"><span>Servings</span></div>
                                                <input type="number" class="form-control form-control-user"
                                                    id="productServings" placeholder="Servings" name="productServings">
                                            </div>
                                            <div class="col-sm-6 mb-2 mb-sm-0">
                                                <div class="mb-2 ml-3 cl2"><span>Type</span></div>
                                                <select class="form-control" id="inputGroupSelect01" name="productType">
                                                    <option selected>Choose dish type</option>
                                                    <option value="Vegetarian">Vegetarian</option>
                                                    <option value="Non-Vegetarian">Non-Vegetarian</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Description</span></div>
                                            <textarea class="form-control form-control-user" id="textarea"
                                                name="productDescription"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 ml-5">
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Primary Image</span></div>
                                            <input type="file" class="form-control form-control-user" id="fileupload"
                                                placeholder="Enter product name" name="productImage1">
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Images</span></div>
                                            <input type="file" class="form-control form-control-user" id="fileupload"
                                                placeholder="Enter product name" name="productImage2">
                                        </div>
                                        <div class="form-group">
                                            <input type="file" class="form-control form-control-user" id="fileupload"
                                                placeholder="Enter product name" name="productImage3">
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <button type="submit" class="btn bg1 text-white hov-btn1 btn-user btn-block">
                                    Add product
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <form>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="../../vendor/jquery/jquery.min.js"></script>
    <script src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../../vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../../js/sb-admin-2.min.js"></script>

</body>

</html>