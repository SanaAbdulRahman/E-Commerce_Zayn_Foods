<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Edit Existing Product</title>
    <link rel="icon" type="image/png" href="../../images/icons/favicon.png"/>

    <!-- Custom fonts for this template-->
    <link href="../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="../../stylesheets/admin.css">
    <link rel="stylesheet" href="../../stylesheets/admin.min.css">
    <link rel="stylesheet" href="../../stylesheets/style.css">
    <link rel="stylesheet" href="../../stylesheets/special.css">

</head>

<body class="bg1">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center pt-5">
                            <h1 class="h3 font-weight-bold cl1">Edit Products</h1>
                        </div>
                        <div class="p-5">
                            <form class="user" action="../admin/postEditProduct" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-7">
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Name</span></div>
                                            <input type="text" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="Enter product name"
                                                name="productName" value="<%=dishData.productName%>">
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Price</span></div>
                                            <input type="number" class="form-control form-control-user"
                                                id="productName exampleInputEmail" placeholder="Enter product price"
                                                value="<%=dishData.productPrice%>" name="productPrice">
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Category</span></div>
                                            <select class="form-control" id="inputGroupSelect01" name="productCategory">
                                                <option value="<%= dishData.productCategory._id %>" selected>
                                                    <%= dishData.productCategory.categoryName %>
                                                </option>
                                                <% categories.forEach((category)=> { %>
                                                    <option value="<%=category._id%>">
                                                        <%= category.categoryName %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Batch</span></div>
                                            <select class="form-control" id="inputGroupSelect01" name="productBatch">
                                                <option value="<%= dishData.productBatch._id %>" selected>
                                                    <%= dishData.productBatch.batchName %>
                                                </option>
                                                <% batches.forEach((batch)=> { %>
                                                    <option value="<%=batch._id%>">
                                                        <%= batch.batchName %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-2 mb-sm-0">
                                                <div class="mb-2 ml-3 cl2"><span>Servings</span></div>
                                                <input type="number" class="form-control form-control-user"
                                                    id="exampleFirstName" placeholder="Servings" name="productServings"
                                                    value="<%=dishData.productServings%>">
                                            </div>
                                            <div class="col-sm-6 mb-2 mb-sm-0">
                                                <div class="mb-2 ml-3 cl2"><span>Type</span></div>
                                                <select class="form-control" id="inputGroupSelect01" name="productType">
                                                    <% if(dishData.productType=="Vegetarian" ) { %>
                                                        <option>Choose dish type</option>
                                                        <option value="Vegetarian" selected>Vegetarian</option>
                                                        <option value="Non-Vegetarian">Non-Vegetarian</option>
                                                        <% } else if(dishData.productCategory=='Non-Vegetarian' ) { %>
                                                            <option>Choose dish type</option>
                                                            <option value="Vegetarian">Vegetarian</option>
                                                            <option value="Non-Vegetarian" selected>Non-Vegetarian
                                                            </option>
                                                            <% } else { %>
                                                                <option>Choose dish type</option>
                                                                <option value="Vegetarian">Vegetarian</option>
                                                                <option selected value="Non-Vegetarian">Non-Vegetarian
                                                                </option>
                                                                <% } %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Description</span></div>
                                            <textarea class="form-control form-control-user" id="textarea"
                                                name="productDescription"><%=dishData.productDescription%>
                                    </textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 ml-5">
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Primary Image</span></div>
                                            <img src="<%=dishData.productImage1%>" alt=""
                                                style="width: 70px; height: 70px; margin-left: 100px; margin-bottom: 25px; margin-top: 25px">
                                            <input type="file" class="form-control form-control-user" id="fileupload"
                                                placeholder="Enter product name" name="productImage1">
                                        </div>
                                        <div class="form-group">
                                            <div class="mb-2 ml-3 cl2"><span>Images</span></div>
                                            <img src="<%=dishData.productImage2%>" alt=""
                                                style="width: 70px; height: 70px; margin-left: 100px; margin-bottom: 25px; margin-top: 25px">
                                            <input type="file" class="form-control form-control-user" id="fileupload"
                                                placeholder="Enter product name" name="productImage2">
                                        </div>
                                        <div class="form-group">
                                            <img src="<%=dishData.productImage3%>" alt=""
                                                style="width: 70px; height: 70px; margin-left: 100px; margin-bottom: 25px; margin-top: 25px"">
                                                <input type="file" class="form-control form-control-user"
                                                id="fileupload" placeholder="Enter product name" name="productImage3">
                                        </div>
                                        <input type="text" value="<%=dishData._id%>" name="id" style="display: none;">
                                        <input type="text" value="<%=dishData.productImage1%>" name="image1" style="display: none;">
                                        <input type="text" value="<%=dishData.productImage2%>" name="image2" style="display: none;">
                                        <input type="text" value="<%=dishData.productImage3%>" name="image3" style="display: none;">
                                    </div>
                                </div>
                                <hr>
                                <button type="submit" class="btn bg1 text-white hov-btn1 btn-user btn-block">
                                   Save Changes
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <form>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="../../vendor/jquery/jquery.min.js"></script>
    <script src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../../vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../../js/sb-admin-2.min.js"></script>

</body>

</html>